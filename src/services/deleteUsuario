  // ROTA PARA DELETAR USUÁRIO
  router.delete('/deleteUsuario/:id', async (req: Request, res: Response): Promise<void> => {
    const { id } = req.params; // Extrai o parâmetro 'id' da URL

    try {
      const connection = await banco.getConnection(); // Obtém uma conexão do pool de conexões

      // Executa uma query SQL para deletar o usuário com o ID especificado
      const result = await connection.execute(
        `DELETE FROM usuarios WHERE idusuarios = :id`, // Query de deleção
        { id }, // Parâmetro 'id' para o SQL
        { autoCommit: true } // Confirma automaticamente a transação
      );

      await connection.close(); // Fecha a conexão com o banco de dados

      // Verifica se o usuário foi deletado com base em 'rowsAffected'
      if (result.rowsAffected === 0) {
        res.status(404).send('Usuário não encontrado'); // Caso nenhum usuário tenha sido afetado (não encontrado)
      } else {
        res.status(200).send('Usuário deletado com sucesso'); // Se o usuário foi deletado, responde com sucesso
      }
    } catch (err) {
      console.error('Erro ao deletar usuário: ', err); // Exibe o erro no console em caso de falha
      res.status(400).send('Erro ao deletar usuário'); // Resposta de erro com status 400
    }
  });
